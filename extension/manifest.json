{
    "manifest_version": 3,
    "name": "Sparkus - Focus Tracking & Attendance",
    "version": "1.0.0",
    "description": "Remote learning engagement, attendance tracking, and exam monitoring for Google Meet and Zoom",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "http://localhost:5000/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*"
            ],
            "js": [
                "content/content-detector.js",
                "content/recorder.js",
                "content/keystroke.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "ui/widget.html",
                "ui/widget.css",
                "ui/widget.js",
                "ui/join-session.html",
                "ui/join-session.js",
                "ui/identity-entry.html",
                "ui/identity-entry.js",
                "ui/permissions.html",
                "ui/permissions.js",
                "lib/webgazer.js",
                "lib/focus-tracker.js",
                "content/content-participant.js",
                "content/content-host.js"
            ],
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*"
            ]
        }
    ]
}